<ion-split-pane>

	<ion-menu [content]="content" side="left" id="menu1">
		<ion-header>
			<ion-toolbar color=primary>
				<ion-title>Menu</ion-title>
				<ion-buttons end>
				</ion-buttons>
			</ion-toolbar>
		</ion-header>

		<ion-content class="blueberry">

	
			
			<ion-list no-lines>

					<ion-grid>
							<ion-row>
								<ion-col>
							<img src="assets/img/conlogo.png" style="width:50%; margin-top:0; margin-bottom:0;margin-left:5em">
						</ion-col>
						</ion-row>
					</ion-grid>


				<ion-item tappable style="background:transparent; color:#444"
					menuClose ion-item *ngFor="let p of pages" [class.activeHighlight]="checkActive(p)" (click)="openPage(p)">
					<ion-icon name="{{p.icon}}" item-left></ion-icon>
					{{p.title}}
				</ion-item>
			</ion-list>
		
		</ion-content>
		
	</ion-menu>

	<ion-nav [root]="rootPage" main #content swipeBackEnabled="false"></ion-nav>

</ion-split-pane>
