// Ionic Variables and Theming. For more info, please see:
// http://ionicframework.com/docs/v2/theming/
$font-path: "../assets/fonts";

@import "ionic.globals";


// Shared Variables
// --------------------------------------------------
// To customize the look and feel of this app, you can override
// the Sass variables found in Ionic's source scss files.
// To view all the possible Ionic variables, see:
// http://ionicframework.com/docs/v2/theming/overriding-ionic-variables/

$text-color:        #000;
$background-color:  #fff;
$borderColor:       #DDD;
$textColor:         #666;


// Named Color Variables
// --------------------------------------------------
// Named colors makes it easy to reuse colors on various components.
// It's highly recommended to change the default colors
// to match your app's branding. Ionic uses a Sass map of
// colors so you can add, rename and remove colors as needed.
// The "primary" color is the only required color in the map. #263238

$colors: (
  //primary:    #488aff, #764880, #7B1FA2, #F15D22, #740e88
  //primary:    #740e88,

  primary:#1d1e22,
  secondary:#78909c,
  danger:     #3498db,
  light:      #ecf0f1,
  dark:       #222,

  favorite:transparent,
blue:       #5757A0,
gray:       #bac7d8,
green:      #33cd5f,
yellow:     #ffc900,
red:        #800000,


);


// App iOS Variables
// --------------------------------------------------
// iOS only Sass variables can go here


$radio-md-color-on: #800000;
$radio-md-icon-width:24px;
$radio-md-icon-height:24px;

// App Material Design Variables
// --------------------------------------------------
// Material Design only Sass variables can go here



//Make status bar text white
$toolbar-md-title-text-color: white;
$toolbar-ios-title-text-color: white;

// App Windows Variables
// --------------------------------------------------
// Windows only Sass variables can go here




// App Theme
// --------------------------------------------------
// Ionic apps can have different themes applied, which can
// then be future customized. This import comes last
// so that the above variables are used and Ionic's
// default are overridden.

@import "ionic.theme.default";


// Ionicons
// --------------------------------------------------
// The premium icon font for Ionic. For more info, please see:
// http://ionicframework.com/docs/v2/ionicons/


$ionicons-font-path: "../assets/fonts";

@import "ionic.ionicons";


// Fonts
// --------------------------------------------------

@import "roboto";
@import "noto-sans";



//Select Dropdown Component

$select-ios-icon-color: #fff!important;
$select-md-icon-color: #fff!important;

//Select range slider height
$range-ios-slider-height: 40px;
$range-md-slider-height:	40px;

$range-md-bar-height:	5px;
$range-ios-bar-height:	5px;

$range-md-pin-font-size: 20px;
$range-ios-pin-font-size: 20px;

$range-ios-knob-width:  30px;
$range-md-knob-width:  30px;

$range-ios-knob-background:  #800000;
$range-md-knob-background:  #800000;


//ALERTS
$alert-md-background-color: #1d1e22; //makes “black” the background
$alert-ios-background: #1d1e22; //makes “black” the background
$alert-md-button-text-color: #fff; //makes "white" buttons, and the selected element
$alert-ios-button-text-color: #fff; //makes "white" buttons, and the selected element
$alert-md-radio-label-text-color:#ffffff;
$alert-ios-radio-label-text-color:#ffffff;
//$alert-md-radio-label-text-color-checked: #800000;
//$alert-ios-radio-label-text-color-checked: #800000;
$alert-md-message-text-color:#fff;
$alert-ios-message-text-color:#fff;
$alert-md-title-text-color: #fff;
$alert-ios-title-text-color: #fff;
$alert-md-sub-title-text-color:#fff;
$alert-ios-sub-title-text-color:#fff;

